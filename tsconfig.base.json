{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@money-matters/app/*": ["apps/money-matters/src/*"],
      "@money-matters/designSystem": ["libs/designSystem/src/index.ts"]
    },
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "customConditions": ["@money-matters/source"]
  }
}
